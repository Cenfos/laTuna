---
import Layout from '../layouts/Layout.astro';

const images = [
  { src: '/assets/images/Permacultura1.jpg', alt: 'Huerto permacultural' },
  { src: '/assets/images/Permacultura2.jpg', alt: 'Diseño de jardín comestible' },
  { src: '/assets/images/Permacultura3.jpg', alt: 'Sistema de captación de agua' },
  { src: '/assets/images/Permacultura4.jpg', alt: 'Tomates' },
  { src: '/assets/images/RioVerdugo.jpg', alt: 'Rio Verdugo' },
  { src: '/assets/images/RioVerdugo2.jpg', alt: 'Sendero por el rio' },
];
---

<Layout title="Galería de Permacultura">
  <h1>Galería de Permacultura</h1>
  <p>Explora imágenes inspiradoras de proyectos y prácticas de permacultura.</p>
  
  <div class="gallery">
    {images.map((image) => (
      <div class="gallery-item">
        <img src={image.src} alt={image.alt} loading="lazy" />
        <p>{image.alt}</p>
      </div>
    ))}
  </div>
</Layout>

<style>
  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    padding: 1rem 0;
  }

  .gallery-item {
    background: white;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover {
    transform: scale(1.05);
  }

  .gallery-item img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .gallery-item p {
    padding: 0.5rem;
    text-align: center;
    font-size: 0.9rem;
  }
</style>