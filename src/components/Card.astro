---
// Mantén la interfaz Props si la estás utilizando
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<ul class="cards-container">
	<li class="link-card">
		<a href={href}>
			<h2>
				{title}
				<span>&rarr;</span>
			</h2>
			<p>{body}</p>
		</a>
	</li>
</ul>

<style is:global>
/* Estilos para el contenedor de las cards */
.services-grid {
  display: flex;
  flex-wrap: wrap; /* Permite que las cards se envuelvan en múltiples líneas */
  justify-content: center; /* Centra las cards horizontalmente */
  gap: 1.5rem; /* Espacio entre las cards */
  padding: 2rem;
}

/* Estilos de las cards */
.link-card {
  list-style: none;
  padding: 1.5rem;
  background-color: #fff;
  border: 4px solid #000;
  border-radius: 8px;
  box-shadow: 8px 8px 0 #000;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  position: relative;
  flex: 1 1 calc(25% - 3rem); /* 4 columnas en pantallas grandes */
  max-width: 300px; /* Ancho máximo para controlar el tamaño */
}

/* Hover efecto */
.link-card:hover {
  transform: translate(-4px, -4px);
}

/* Estilos para el texto dentro de las cards */
.link-card a {
  text-decoration: none;
  color: #000;
  display: block;
  width: 100%;
  height: 100%;
}

.link-card h2 {
  font-size: 2rem;
  color: #000;
  font-weight: bold;
  margin-bottom: 1rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.link-card p {
  font-size: 1.25rem;
  color: #000;
  font-weight: 500;
  line-height: 1.4;
}

/* Pantallas medianas (tablets) - 2 columnas */
@media (max-width: 1024px) {
  .link-card {
    flex: 1 1 calc(50% - 2rem); /* 2 columnas en tablets */
  }
}

/* Pantallas pequeñas (móviles) - 1 columna */
@media (max-width: 768px) {
  .link-card {
    flex: 1 1 100%; /* 1 columna en móviles */
  }
}

</style>
