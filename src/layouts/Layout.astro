---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Blog de Permacultura" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--color-background: #D6EFD8;
		--color-text: #1A5319;
		--color-primary: #508D4E;
		--color-secondary: #80AF81;
		--color-accent: #1A5319;
		--color-text-light: #D6EFD8;
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--color-background);
		color: var(--color-text);
	}
	body {
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
	main {
		flex: 1;
		padding: 2rem;
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		box-sizing: border-box;
	}
	a {
		color: var(--color-accent);
	}
	h1, h2, h3, h4, h5, h6 {
		color: var(--color-primary);
	}
</style>